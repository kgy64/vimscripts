#!/bin/bash
#

URL="https://xeranet.atlassian.net/browse"

function check_browser()
{
	test "$BROWSER" && return
	BROWSER="`which ${1} 2>/dev/null`"
}

check_browser "chrome"
check_browser "chromium"
check_browser "google-chrome"
check_browser "mozilla"
check_browser "konqueror"

test "$BROWSER" || exit 1

$BROWSER $URL/VID-$1 &

