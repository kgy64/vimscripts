#!/bin/bash
#

COMMAND="$1"

test "$COMMAND" || exit 1

shift

DIR="`dirname "$1"`"
NAME="`basename "$1"`"

shift

cd "$DIR" || exit 1

case "$COMMAND" in
    blame)
        info="`svn info "$NAME"`"
        test $? = "0" || exit 1
        echo "# URL:      `echo "$info" | grep "^URL:"      | cut -d " " -f 2`"
        echo "# Revision: `echo "$info" | grep "^Revision:" | cut -d " " -f 2`"
        echo
    ;;
esac

svn "$COMMAND" "$NAME" "$@"

