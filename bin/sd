#!/bin/bash
#

function do_svn_mode()
{
 ss "${DIRS[@]}" | grep "^[AM]" | grep -v "\.vcproj\>" | grep -v "\.sln\>" | awk '{ i=2; while (1) { printf("%s ", $i); if (i>=NF) break; i++ }; printf("\n"); }' | {
    declare -a files
    index=0
    while read line
    do
        files[$index]="$line"
        index=$(($index+1))
    done
    if test ${#files[*]} = 0; then
        echo "No difference." >&2
        exit 0
    elif test ${#files[*]} -gt 0; then
        echo "${#files[*]} files differ." >&2
    fi
    svn diff "${files[@]}"
 }
}

function git_mod_out()
{
 sed -e "s%^--- a/%--- %" -e "s%+++ b/%+++ %"
}

function git_submodule_diff()
{
 local module_name
 while read line
 do
    case "$line" in
        Entering*)
            module_name="$(echo "$line" | cut -d " " -f 2 | sed "s/'//g")"
        ;;
        *)
            $HOME/bin/vim/git-submodule-diff "$module_name" "$line"
        ;;
    esac
 done
}

function do_git_mode()
{
 if test "$cached" = "1"; then
    git show "${DIRS[@]}" | git_mod_out
 else
    git diff --relative "${DIRS[@]}" | git_mod_out
    git diff --cached --relative "${DIRS[@]}" | git_mod_out
    git submodule foreach pwd | git_submodule_diff
 fi
}

# ---------------------------------------------

declare -a DIRS
dir_no=0

while test $# -gt 0
do
    case "$1" in
        -c)
            cached=1
        ;;
        -*)
            echo "Unknown option: $1" >&2
            exit 1
        ;;
        *)
            DIRS[$dirno]="$1"
            dirno=$(($dirno+1))
        ;;
    esac
    shift
done

testdir="${DIRS[0]}"
test "$testdir" || testdir=.

while true
do
    testdir=$(cd $testdir && pwd)
    if test "$testdir" = "/"
    then
        echo "No version control." >&2
        exit 1
    fi
    if test -d "$testdir/.svn"
    then
        do_svn_mode | dos2unix
        exit 0
    elif test -e "$testdir/.git"
    then
        do_git_mode | dos2unix
        exit 0
    fi
    testdir="$testdir/.."
done

