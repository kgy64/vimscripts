#!/bin/bash
#

function check_path()
{
    if test -e "${actual_path}.svn" -o -e "${actual_path}.git"
    then
        start=$index
    else
        if test "$actual_path" = "$current_dir"
        then
            start=$index
        fi
    fi
}

# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *

NAME="$(basename "$1")"
DIR="$(dirname "$1")"

current_dir="`pwd`/"

if test "${DIR:0:1}" = "/"; then
    PATHNAME="$DIR/$NAME"
else
    PATHNAME="$current_dir$DIR/$NAME"
fi

PATHNAME="$(echo "$PATHNAME" | sed 's%/./%/%g')"

declare -a words=(`echo "$PATHNAME" | tr "/" " "`)

actual_path=/

start=
index=0
check_path
while test "${words[$index]}"
do
    check_path
    actual_path="$actual_path${words[$index]}/"
    index=$(($index+1))
done

echo -n "_"

if test "$start"
then
    while test $start -lt ${#words[*]}
    do
        echo -n "_${words[$start]}" | tr "[a-z]+\\-\\~\\.,:;" "[A-Z]_______"
        start=$(($start+1))
    done
fi

echo "_INCLUDED__"

